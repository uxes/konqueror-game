<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.uxes.konqueror_game">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WellcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UsersListActivity"
            android:label="@string/title_activity_users_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".map.KonquerMap"
            android:label="@string/title_activity_konqueror_map"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".ScoreActivity"></activity>
        <activity
            android:name=".game.ConnectActivity"
            android:label="@string/title_activity_connect"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".game.AnswerActivity"></activity>
    </application>

</manifest>