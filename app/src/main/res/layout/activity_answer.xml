<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.uxes.konqueror_game.game.AnswerActivity">

    <TextView
        android:id="@+id/question"
        android:layout_width="365dp"
        android:layout_height="62dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="124dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/answer3"
        android:layout_width="153dp"
        android:layout_height="71dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="176dp"
        android:onClick="clickAnswer"
        android:text="Button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/answer1"
        android:layout_width="153dp"
        android:layout_height="71dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="48dp"
        android:onClick="clickAnswer"
        android:text="Button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/answer2"
        android:layout_width="153dp"
        android:layout_height="71dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="177dp"
        android:onClick="clickAnswer"
        android:text="Button"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/answer3"
        app:layout_constraintTop_toBottomOf="@+id/question"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/answer0"
        android:layout_width="153dp"
        android:layout_height="71dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="48dp"
        android:onClick="clickAnswer"
        android:text="Button"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/answer3"
        app:layout_constraintTop_toBottomOf="@+id/question"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/exitAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:text="exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/viewNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nick: .."
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/viewOpponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="266dp"
        android:layout_marginRight="266dp"
        android:text="Opponent: ..."
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/viewNick"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.002"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/viewNick"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/viewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="16dp"
        android:text="Score: ."
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintLeft_toRightOf="@+id/viewNick"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:text="Answers left:.."
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="436dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/viewScore"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/viewOpponent"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/viewRealm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Realm: .."
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/viewOpponent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/question"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintVertical_bias="0.437" />


</android.support.constraint.ConstraintLayout>
